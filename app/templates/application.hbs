<div class="ui fixed inverted menu">
    <div class="ui container">
        <a href="#" class="header item">
            <!--<img class="logo" src="assets/images/logo.png">-->
            <h2>Serenity</h2>
        </a>
        {{#link-to "items" class="item"}}Content{{/link-to}}

        {{#if session.isAuthenticated}}
        <div class="ui right simple dropdown item">
            <img class="ui avatar image" src="https://www.arcgis.com/sharing/rest/community/users/{{session.content.currentUser.username}}/info/{{session.content.currentUser.thumbnail}}?token={{session.content.token}}" />
            <b>{{session.content.currentUser.firstName}}</b>
            <i class="dropdown icon"></i>
            <div class="menu">
                <a href="#" class="item" {{action 'invalidateSession'}}>
                    <i class="sign out icon"></i>Logout
                </a>
            </div>
        </div>
        {{else}}
        <div class="ui right item">
            <i class="sign in icon"></i>{{#link-to 'login'}}Login{{/link-to}}
        </div>
        {{/if}}
    </div>
</div>

<div class="ui main container">
    {{liquid-outlet}}
</div>