<div class="ui one column">
    
    <div class="one column row">
        <div class="right aligned column">
            <!--
            <div class="ui buttons">
                <button class="ui button" id="btnGridLayout"><i class="grid layout icon"></i></button>
                <button class="ui button" id="btnListLayout"><i class="list layout icon"></i></button>
            </div>
            -->
        </div>
    </div>
    
    <div class="gridItemContainer ui items">
        {{#each model.groups as |group|}}
        <div class="gridItem item">
            
            <div class="content">
                <div class="header">{{group.title}}</div>
                <div class="meta">
                    <span title="Owned by">{{group.owner}}</span>
                </div>
                <div class="description">
                    {{group.snippet}}
                </div>
                <div class="extra">
                    <span title="Last modified: {{moment-format group.modified}}" class="right floated">
                        {{moment-from-now group.modified}}
                    </span>
                    <span>
                        {{#link-to "group" group.id}}<i title="More Info" class="info icon"></i>{{/link-to}}
                        {{#if group.isPrivate}}
                        <i title="Not shared" class="lock icon"></i>
                        {{else}}
                        <i title="Shared" class="unlock icon"></i>
                        {{/if}}
                    </span>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
